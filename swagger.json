{
  "swagger": "2.0",
  "info": {
    "title": "Task Manager App",
    "description": "Retrieve data for an authenticated user through web tokens making REST requests GET, POST, PUT, DELETE from a Tasks database in MongoDB.",
    "version": "1.0.0"
  },
  "host": "localhost:3000",
  "basePath": "/",
  "schemes": [
    "http",
    "https"
  ],
  "paths": {
    "/auth/login": {
      "get": {
        "tags": [
          "Authentication"
        ],
        "description": "Iniciar sesión utilizando GitHub OAuth",
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/auth/logout": {
      "get": {
        "tags": [
          "Authentication"
        ],
        "description": "Cerrar sesión",
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/auth/test": {
      "get": {
        "tags": [
          "Authentication"
        ],
        "description": "Cerrar sesión",
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/movies": {
      "get": {
        "tags": [
          "Movies"
        ],
        "description": "Obtener todas las películas",
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "post": {
        "tags": [
          "Movies"
        ],
        "description": "Crear una nueva película",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "$ref": "#/definitions/MovieInput"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Movie created successfully"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/movies/{id}": {
      "get": {
        "tags": [
          "Movies"
        ],
        "description": "Obtener detalles de una película por ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "Movie not found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "put": {
        "tags": [
          "Movies"
        ],
        "description": "Actualizar detalles de una película por ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "$ref": "#/definitions/MovieInput"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Movie updated successfully"
          },
          "400": {
            "description": "Bad Request"
          },
          "404": {
            "description": "Movie not found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "delete": {
        "tags": [
          "Movies"
        ],
        "description": "Eliminar una película por ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "204": {
            "description": "Movie deleted successfully"
          },
          "404": {
            "description": "Movie not found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  },
  "definitions": {
    "MovieInput": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "example": "Example Movie"
        },
        "genre": {
          "type": "string",
          "example": "Action"
        },
        "year": {
          "type": "number",
          "example": 2022
        },
        "director": {
          "type": "string",
          "example": "John Doe"
        },
        "rating": {
          "type": "number",
          "example": 8.5
        },
        "actors": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "example": ["Actor1", "Actor2"]
        },
        "plot": {
          "type": "string",
          "example": "A brief summary of the movie plot"
        }
      }
    }
  }
}
